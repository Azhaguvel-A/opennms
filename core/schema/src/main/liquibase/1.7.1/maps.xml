<?xml version="1.0" encoding="UTF-8"?>
 
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

	<changeSet author="mattraykow" id="1.7.1-add-map-id">
		<sql>ALTER TABLE map DROP CONSTRAINT pk_mapid CASCADE</sql>
		<modifyColumn tableName="map">
			<column name="mapid" type="integer" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" primaryKeyName="pk_mapid" />
			</column>
		</modifyColumn>

		<rollback>
			<dropPrimaryKey tableName="map" constraintName="pk_mapid" />
			<modifyColumn tableName="map">
				<column name="mapid" type="integer">
					<constraints nullable="false" />
				</column>
			</modifyColumn>
		</rollback>
	</changeSet>

	<changeSet author="rssntn67" id="1.7.1-add-map-group">
		<preConditions onFail="MARK_RAN">
			<columnExists tableName="map" columnName="mapgroup" />
		</preConditions>

		<addColumn tableName="map">
			<column name="mapgroup" type="varchar(64)" />
		</addColumn>

		<rollback>
			<dropColumn tableName="map" columnName="mapgroup" />
		</rollback>
	</changeSet>

</databaseChangeLog>