<?xml version="1.0" encoding="UTF-8"?>
 
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">

	<changeSet author="rssntn67" id="1.7.0-ifindex-persistence">
		<preConditions onFail="MARK_RAN">
			<and>
				<columnExists tableName="alarms" columnName="ifindex" />
				<columnExists tableName="events" columnName="ifindex" />
			</and>
		</preConditions>

		<addColumn tableName="alarms">
			<column name="ifindex" type="integer" />
		</addColumn>
		<addColumn tableName="events">
			<column name="ifindex" type="integer" />
		</addColumn>

		<createIndex tableName="alarms" indexName="alarm_lasteventtime_idx">
			<column name="lasteventtime" />
		</createIndex>

	</changeSet>

	<changeSet author="rangerrick" id="1.7.0-ownership">
		<sql>GRANT ALL PRIVILEGES ON DATABASE ${install.database.name} TO ${install.database.user}</sql>
	</changeSet> 

</databaseChangeLog>