<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style >
		.navBlock{
	       float: left;
	       font-family: "Lucida Grande", Verdana, sans-serif;
	       font-size: 70%;
		}
		
		.opennmsLink{
			position: relative;
			top: 30px;
			left: 250px;
            font-family: "Lucida Grande", Verdana, sans-serif;
            font-size: 70%;
            cursor: pointer;
            color: #366903;
            text-decoration: none;
		}
	</ui:style>
	<g:HTMLPanel>
        <div class="{style.navBlock}">
            <p>Select Location Type</p>
	        <div>
		       <g:RadioButton ui:field="m_allLocations" name="locations">All Locations</g:RadioButton>
	        </div>
	        <div>
		       <g:RadioButton ui:field="m_singleLocation" name="locations">Single Location</g:RadioButton>
	        </div>
	        <div>
	            <g:ListBox ui:field="m_locationList" visible="false"></g:ListBox>
	        </div>
        </div>
        <div class="{style.navBlock}" style="margin: 0px 0px 20px 20px;">
            <p>Select Participant</p>
	        <div>
	            <g:RadioButton ui:field="m_allHosts" name="hosts">All Participants</g:RadioButton>
	        </div>
	        <div>
	            <g:RadioButton ui:field="m_singleHost" name="hosts">Single Participant</g:RadioButton>
	        </div>
	        <div>
	            <g:ListBox ui:field="m_hostList" visible="false"></g:ListBox>
	        </div>
        </div>
        <div class="{style.opennmsLink}" >
            <g:Anchor ui:field="m_link">Want to see more, click here.</g:Anchor>
        </div>
        <div class="{style.opennmsLink}" >
            <g:Anchor href="http://www.choopa.com/">Hosting Sponsored by Choopa</g:Anchor>
        </div>
	</g:HTMLPanel>
</ui:UiBinder> 