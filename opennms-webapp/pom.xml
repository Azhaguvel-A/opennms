      <plugin>
        <groupId>org.opennms.maven.plugins</groupId>
        <artifactId>gwt-maven-plugin</artifactId>
        <version>1.6</version>
        <configuration>
          <moduleName>${moduleName}</moduleName>
          <homePage>${moduleHtml}</homePage>
          <gwtHome>${gwt.home}</gwtHome>
          <pathelements>
